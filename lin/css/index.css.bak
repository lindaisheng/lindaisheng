/*给我留言*/
.message{
    width:100%;

}
.message .message-con{
    padding:1rem 0 0.5rem;
    width:100%;
	background:#f00;
	text-align:center;
}
.message .message-con h3{
    font-size:0.40rem;
}
.message .message-con input{
    outline:none;
    width:2rem;
	height:0.3rem;
    margin:0.6rem 0.05rem 0.15rem;
}
.message .message-con textarea{
    padding:0.05rem;
	box-sizing:border-box;
	width:6.45rem;
	height:1.5rem;
	resize:none;/*禁止拉伸*/
	outline:none;
}
.message .message-con a{
    display:inline-block;
    margin:0.05rem -6rem 0 0;
	width:0.4rem;
	height:0.2rem;
	background:#ccc;
	color:#000;
	border-radius:10%;
	line-height:0.2rem;
	font-size:0.14rem;
}
