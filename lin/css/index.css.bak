/*我的技能*/
.skill{
    width:100%;

}
.skill .skill-con{
    padding:0.8rem 0 0;
	box-sizing:border-box;
    width:100%;
	text-align:center;
    background:#333333;
}
.skill .skill-con h3{
    color:#ececec;
	font-size:0.46rem;
	margin-bottom:0.8rem;
}
.skill .skill-con ul{
    margin:0 auto;
	width:16.8rem;
}
.skill .skill-con li.con{
    float:left;
	margin:0 1.6rem 1rem;
    width:1rem;
	height:1rem;
	background:#7eb2c8;
	border-radius:50%;
	line-height:2.8rem;
	color:#ececec;
}

/*我的作品*/
